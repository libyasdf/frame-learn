<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\学习考核20190411Class"></property>
	
	<target name="mqx">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="fengchao"/>
		</copy>
	</target>
	
	
	<fileset id="fengchao" dir="../../../../">
			
		<!--前台-->
		<!-- 试题修改时，提交集成保存功能-->
		<include name="WebContent/modules/zhbg/xxkh/questionsManage/js/questionEdit.js"/>
		<!-- 考试发布时间允许是当天-->
		<include name="WebContent/modules/zhbg/xxkh/testManage/js/ksglValidator.js"/>
		<include name="WebContent/modules/zhbg/xxkh/testManage/ksglEditForm.html"/>
		<!-- 已经提交的考试，页面上 上报考试人员一项不用显示操作提示信息了-->
		<include name="WebContent/modules/zhbg/xxkh/testManage/js/ksglEditFormEcho.js"/>
		
		<!-- 后台-->
		<!-- 考试发布时，如果考试开始时间跟当前日期一致，那么就直接发布考试-->
		<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/zhbg/xxkh/testmanage/services/"/>
		<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/zhbg/xxkh/testmanage/source/"/>
		<!-- 个人管理-在线培训时长正副局长点开没有树问题-->
		<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/zhbg/xxkh/tree/services/"/>
				
		
		

	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/cqqx"/>
			<copy todir="${export.dir.root}/cqqx" overwrite="true">
				<fileset refid="fengchao"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,mqx">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>