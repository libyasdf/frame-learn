<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\考勤管理_19.5.29"></property>
	
	<target name="lyj">
		<mkdir dir="${export.dir.root}\tjxm"/>
