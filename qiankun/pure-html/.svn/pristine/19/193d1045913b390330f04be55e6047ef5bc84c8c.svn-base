#header {
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 115px;
    z-index: 999;
}
#left {
    position: fixed;
    top: 115px;
    bottom: 0;
    left: 0px;
    width: 220px;
    height: auto;
    z-index: 99;
    border-right: 1px solid #eee;
    overflow-y: auto;
}
.left_ul li{
    border: 1px #f7f7f7 solid;
    margin: -1px;
    margin-right: 0px;
}
#right {
    box-sizing: border-box;
    width: 100%;
    padding-left:230px;
    padding-right: 20px;
    margin-top:120px;
}


/**
 * 收缩展开功能
 */
#unfold{
    background-image: url(../../../static/images/show_12.jpg);
    position: fixed;
    top:115px;
    height:100%;
    width:9px;
    left:220px;
    display: table;
}

#unfold span{
    display: table-cell;
    vertical-align:middle;
}

#unfold span img{
    margin-top: -100px;
    cursor: pointer;
}

.unfoldBody #unfold{
    left:0px;
}

.unfoldBody #left{
    left: -220px;
}

.unfoldBody #right{
    padding-left:20px;
}


/* 首页鼠标移入待办事项Tab */
.itemTab .gr_block_title_tab_ul {
    height: 38px;
    /*position: relative;*/
}
.itemTab .gr_block_title_tab_ul li {
    width: 120px;
    padding:0;
    text-align: center;
    border-bottom:none;
}
/**  菜单底下移动的线 **/
.itemTab .gr_block_title_tab_ul .bottom_line {
    display: block;
    position: absolute;
    left:0px;
    top:36px;
    width: 120px;
    height: 0px;
    border-bottom: 2px solid #0073aa;
    transition:left 0.2s ease-in-out 0s;
    -webkit-transition:left 0.2s ease-in-out 0s;
    -moz-transition:left 0.2s ease-in-out 0s;
    -o-transition:left 0.2s ease-in-out 0s;
}


/* 顶部右上角图标 */
.header-right-icon {
    display: inline-block;
    position: relative;
    width: 12px;
    height: 12px;
    background:  no-repeat;
    background-size: 12px 12px;
}
.icon-info {
    background-image: url("/static/images/icon-info.png");
}
.icon-msg {
    background-image: url("/static/images/icon-msg.png");
}
.icon-exit {
    background-image: url("/static/images/icon-exit.png");
}
.icon-tip {
    position: absolute;
    left: 40px;
    top:-12px;
    width: auto;
    height: 16px;
    line-height: 13px;
     text-align: center;
    color: #ffffff;
    background: red;
    border-radius: 50%;
    /* border: 3px solid red; */
    box-sizing: border-box;
}
.icon-tip-text {
    font-size: 10px;
    padding:5px;
    -webkit-transform: scale(0.85);
}

#dinnerMenu {
    display: inline-block;
    margin-bottom: 0;
}
#orderingMeals {
    float: right;
    margin-right: 20px;
    margin-top: -3px;
    padding: 4px 10px;
    margin-bottom: auto;
}