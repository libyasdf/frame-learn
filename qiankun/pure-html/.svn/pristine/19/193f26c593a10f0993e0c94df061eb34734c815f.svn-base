        var theRequest = GetRequest();
        var resId = theRequest.resId;
        var deptUrl = theRequest.url;
        var type = theRequest.type;
        var isMulti = theRequest.isMulti;
        var orgId = theRequest.deptId;
        var check = theRequest.check;
        var cancle = theRequest.cancle;

        /**
         * 注意这是zTree3.5版本，API必须在3.0版本以上，以下的版本API不对
         * @type {Array}
         */
        var deptZtree = function () {
            var zTreeObj = null;
            var zNodes = null;

            //ztree配置选项
            var setting = {
                async: {
                    enable: true,
                    url: deptUrl,
                    autoParam: ["id"],
                    otherParam: ["type", "2", "orgId", orgId],
                    dataFilter: ajaxDataFilter
                },
                callback: {
                    onDblClick: function (event, treeId, treeNode) {
                        CommonUtil.zTreeOnDblclick(event, treeId, treeNode);
                    },
                    onCheck: function (event, treeId, treeNode) {
                        CommonUtil.zTreeOnCheck(event, treeId, treeNode);
                    }
                },
                data: {
                    key: {
                        name: "name",
                        title: "name"
                    },
                    simpleData: {
                        enable: true,
                        idKey: "id",
                        pIdKey: "pid",
                        rootPId: 0
                    }
                },
                check: {
                    enable: true,
                    autoCheckTrigger: true,
                    chkStyle: "checkbox",
                    chkboxType: { "Y": check, "N": cancle }
                }
            };

            //异步返回数据后的回调方法
            function ajaxDataFilter(event, parentNode, childNodes) {
                if (childNodes.length > 0) {
                    for (var i = 0; i < childNodes.length; i++) {
                        if (childNodes[i].isBranch == "true") {
                            childNodes[i].isParent = true;
                            childNodes[i].checked = false;
                        }
                    }
                }
                return childNodes;
            };

            // 加载数据
            var loadData = function () {

                console.log("deptUrl" + JSON.stringify(deptUrl));
                //获取部门  
                $.ajax({
                    async: false,
                    cache: false,
                    type: "POST",//请求方式为get
                    url: deptUrl,
                    dataType: "json", //返回数据格式为json
                    data: { "type": "2", "orgId": orgId },
                    success: function (datas) {
                        console.log("datas" + JSON.stringify(datas));
                        var zNodes = datas;
                        console.log(zNodes);
                        treeNodes = datas;//treeid
                        for (var i = 0; i < zNodes.length; i++) {
                            if (zNodes[i].isBranch == true || zNodes[i].isBranch == "true") {
                                zNodes[i].isParent = true;
                            }
                        }
                        zTreeObj = $.fn.zTree.init($("#tree-obj"), setting, zNodes);
                        console.log(zTreeObj);
                        CommonUtil.echoData(zTreeObj);
                    },
                    error: function (request) {
                        layer.msg("数据加载失败！请刷新重试！", { icon: 2 });
                    }
                });

            }

            /**
             * 过滤
             * @return {[type]} [description]
             */
            var filter = function () {
                var nodeName = $('input[name="deptName"]').val().replace(/^\s+|\s+$/g, '');
                //如果输入为空 则显示全部部门 
                if (nodeName == "") {
                    loadData();
                    return;
                }
                $.ajax({
                    async: false,
                    cache: false,
                    type: 'Post',
                    url: '/dept/getDepartmentStaffByName?resId=' + resId,
                    data: { "type": "dept", "qName": nodeName, "deptId": orgId },
                    dataType: "json",
                    success: function (datas) {
                        console.log(datas);
                        var zNodes = datas;
                        console.log("datas11" + JSON.stringify(datas));
                        console.log("zNodes11" + JSON.stringify(zNodes));
                        if (zNodes.length > 0) {
                            for (var i = 0; i < zNodes.length; i++) {
                                zNodes[i].id = zNodes[i].uuid;
                                zNodes[i].pid = zNodes[i].uupid;
                                zNodes[i].nodeType = zNodes[i].type;
                                zNodes[i].nocheck = false;
                                if (zNodes[i].isBranch == true || zNodes[i].isBranch == "true") {
                                    zNodes[i].isParent = true;

                                }
                                if (zNodes[i].pid == "0") {
                                    zNodes[i].istop = true;
                                }
                            }
                            console.log(zNodes);
                            zTreeObj = $.fn.zTree.init($("#tree-obj"), setting, zNodes);
                            console.log("zTreeObj11" + zTreeObj);
                        } else {
                            var hideNodes = deptZtree.getZTreeObj().getNodes();
                            deptZtree.getZTreeObj().hideNodes(hideNodes);

                        }

                    },
                    error: function (request) {
                        layer.msg("数据加载失败！请刷新重试！", { icon: 2 });
                    }
                })

            }

            return {
                init: function () {
                    loadData();
                },
                filter: function () {
                    filter();
                },
                getZTreeObj: function () {
                    return zTreeObj;
                }
            }
        }();

