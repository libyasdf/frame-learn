<script type="text/javascript">
    //参考：http://www.layui.com/laydate/
    //绑定日期输入input
    laydate.render({
        elem: '#time' //指定元素
    });
    //日期范围
    laydate.render({
        elem: '#timeRange'
        ,range: true
    });

    

    //定义bootatrap-table数据列
    //    sortable：开启列排序，其他参考API
    var right_table_col = [{
        field: 'id'
        , title: '序号'
        , width: '5%'
        , order: "desc"
        , align:"center"
    ,formatter : function(value, row, index) {
		//计算序号，并存放业务ID，及已办事项ID
    	var pageSize=$('#right_table').bootstrapTable('getOptions').pageSize;//通过表的#id 可以得到每页多少条
        var pageNumber=$('#right_table').bootstrapTable('getOptions').pageNumber;//通过表的#id 可以得到当前第几页
        var orderNum = pageSize * (pageNumber - 1) + index + 1;//计算序号
        return "<span recordId='"+row.id+"'>"+orderNum+"</span>";
	}}, {
        field: 'infoName'
        , title: '资料名称'
        , width: '55%'
        , align:"center"
    }, {
        field: 'startTime'
        , title: '学习时间'
        , width: '20%'
        , align:"center"
    }, {
        field: 'learnTimeH'
        , title: '学习时长（小时）'
        , width: '20%'
        , align:"center"
    }];

    $(document).ready(function (e) {
    	var theRequest = GetRequest();
    	var tabUrl="";
    	if(theRequest.from=='personal'){
    		tabUrl="/zhbg/xxkh/learntime/getLearnTimeById";
    	}
        if(theRequest.from=='dept'){
        	tabUrl="/zhbg/xxkh/learntime/getDeptLearnTimeById";
    	}
        //初始化表格
        TableInit.init({
            domId:"right_table",
            url:tabUrl,
            columns:right_table_col,
            queryParams:function(params){
                //这里将各个查询项添加到要传递的参数中
                params.timeRange = theRequest.timeRange;
                params.nodeIds=theRequest.nodeIds;
                params.userId=theRequest.userId;
                return params;
            }, 
            readOnlyFn:function(){
            	$('tr.readOnly').find('td').css("cursor","");
            }
        });
    });

</script>
