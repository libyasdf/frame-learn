    function updateZd(upDown) {
        var contentIds = "";
        var rows = $("#right_table2").bootstrapTable('getSelections');
        if(rows.length == 0){
            layer.msg("请选择一条数据！",{icon:7});
            return;
        }
        for(var i=0;i < rows.length;i++){
            contentIds = contentIds + rows[i]['id']+",";
            var subflag = rows[i]['flag'];
            if(subflag != '1'){
                layer.msg("只能置顶已发布的信息",{icon:7});
                return;
            }
        }
        var datas = {"ids":contentIds,"upDown":upDown,"math":Math.random(),"resId":$("#resId").val()};
        httpRequest("get","/system/notice/setTop",datas,function (data){
            var msg = "";
            if(upDown == "true"){
                msg = "置顶"
            }else{
                msg = "取消置顶"
            }
            if(data.flag == "1"){
                layer.msg(msg+"成功！",{icon:1});
            }else{
                layer.msg(msg+"失败！",{icon:0});
            }
            TableInit.refTable("right_table2");
        });
    }

</script>
