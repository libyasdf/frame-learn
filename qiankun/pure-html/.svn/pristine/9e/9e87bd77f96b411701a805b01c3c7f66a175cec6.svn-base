    var paramJson = new GetParameter(url);
    var noticeType = paramJson.noticeType;

    var resId = $('#left_ul').find('a.active').attr("id");
    //起草
    function draft(){
        // 获取资源id
        var resId = $('#left_ul').find('a.active').attr("id");
        MyLayer.layerOpenUrl({url:'/modules/system/notice/noticeEditForm.html?noticeType=' + noticeType + '&oper=NEW&resId=' + resId,title:'起草通知公告'});
    }

    //根据登录人判断是否显示标签页
    $(function () {
        debugger;
        var rolesNo = getcookie("rolesNo");
        if(rolesNo.indexOf("C611") != -1 ||rolesNo.indexOf("D611") != -1){
            $("#page2").show();
            $("#page3").show();
            if(rolesNo.indexOf("C615") != -1 || rolesNo.indexOf("D615") != -1 ){
                $("#page1").show();
                $("#formpage1").removeClass('hidden');
            }else{
                $("#formpage2").removeClass('hidden');
            }
        }else if(rolesNo.indexOf("C615") != -1 || rolesNo.indexOf("D615") != -1 ){
            $("#page1").show();
            $("#formpage1").removeClass('hidden');
        }
    });

    //标签页切换
    $(function () {
        debugger;
        $('.nav-tabs > li').unbind('click').bind('click',function(){
            var id = $(this).attr('for');
            $('.main').children().addClass('hidden');
            $('#'+id).removeClass('hidden');
            refreshPage(id);
        });
    });

    //刷新方法，流程中需要回调
    function refreshPage(id){
        if(id == 'formpage1'){
            TableInit.refTable("right_table1");
        }
        if(id == 'formpage2'){
            TableInit.refTable("right_table2");
        }
        if(id == 'formpage3'){
            TableInit.refTable("right_table3");
        }
    }

