<script type="text/javascript" src="/modules/system/component/tree/js/deptUserTree.js"></script>
<script type="text/javascript">
    //参考：http://www.layui.com/laydate/
    $("#subflag").val(Config.startflag)
    $("#cruDeptId").val(getcookie("chuShiId"));
    //日期范围
    laydate.render({
        elem: '#cdztDate'
        , range: true
    });

	//起草
	function draft(){
		  var resId = $('#left_ul').find('a.active').attr("id");
		  MyLayer.layerOpenUrl({url:'/modules/zhbg/kqgl/comeLateLeaveEarly/comeLateLeaveEarlyForm.html?oper=NEW&resId=' + resId,title:'起草迟到早退信息'})
	}
    //定义bootatrap-table数据列
    //    sortable：开启列排序，其他参考API
    var right_table_col = [{
         title: '序号'
        , width: '2%'
        , order: "desc"
        , align:"center"
        , formatter: function (value, row, index) {
        	 var pageSize=$('#right_table').bootstrapTable('getOptions').pageSize;
             var pageNumber=$('#right_table').bootstrapTable('getOptions').pageNumber;
             var orderNum = pageSize * (pageNumber - 1) + index + 1;//计算序号
             return "<span data-id='"+row.id+"'>"+orderNum+"</span>";
           }
    },  {
        field: 'creUserName'
        , title: '申请人'
        , width: '11%'
        , align:"center"
    }, 
    {
        field: 'applicantUnitName'
        , title: '单位'
        , width: '11%'
        , align:"center"
    },
    {
        field: 'cdztDate'
        , title: '日期'
        , width: '10%'
        , align:"center"
    },
    {
        field: 'state'
        , title: '状态'
        , width: '10%'
        , align:"center"
       ,formatter: function (value, row, index){
    	   if(value=='0'){
    		   return "迟到";
    	   }
           if(value=='1'){
        	 return "早退";  
           }	
        } 
    },{
        field: 'cdztReason'
        , title: '原因'
        , width: '15%'
        , align:"center"
        , formatter: function (value, row, index){
        	if(row.reasonType=='1'){
        		value = "因公";
        	}else{
        		if(row.state=='0'){
        			value = lateMap[value];
        		}else if(row.state=='1'){
        			value = leaveMap[value];
        		}
        	}
            return value;	
          }
    },{
        field: 'cz'
        , title: '操作'
        , width: '10%'
        , align:"center"
        , formatter: function (value, row, index) {  //直接定义function,return就是html代码
            var opt = value.split(",");
            var html = "";
            for (var i = 0; i < opt.length; i++) {
                if (opt[i] == "add") {

                } else if (opt[i] == "update") {
                	html += "<i class='glyphicon glyphicon-edit' title='修改' onclick=\'list.editFun(\"" + row.id + "\")\'></i>&nbsp;&nbsp;";
                } else if (opt[i] == "delete") {
                	 html += "<i class='glyphicon glyphicon-trash' title='删除' onclick=\'list.deleteFun(\"" + row.id + "\")\'></i>";
                }
            }
            return html;
        }
    }];
	var lateMap = {};
	var leaveMap = {};
    $(document).ready(function (e) {
    	lateMap = Dictionary.getNameAndCode({
    		mark:"lateCause",
    		type:'1'
    	});
    	leaveMap = Dictionary.getNameAndCode({
    		mark:"leaveEarlyCause",
    		type:'1'
    	});
        //初始化表格
        TableInit.init({
            domId:"right_table",
            url:"/zhbg/kqgl/comeLateLeaveEarly/getList",
            columns:right_table_col,
            queryParams:function(params){
            	params.resId = $('#left_ul').find('a.active').attr("id");
            	//params.cdztUserId = $("#cdztUserId").val();
            	params.state = $("#state").val();
            	params.timeRange=$("#cdztDate").val();
                params.subflag = Config.startflag;
                return params;
            },
            readOnlyFn:function(){
            	$('tr.readOnly').find('td:not(:last)').attr("title", "点击查看详情");
            	$('tr.readOnly').find('td:not(:last)').unbind('click').bind('click', function (e) {
             		//取消事件冒泡
 						var resId = $('#left_ul').find('a.active').attr("id");
 		         		 var id = $(this).parent().find("span[data-id]").attr("data-id");
 		         		 MyLayer.layerOpenUrl({url: '/modules/zhbg/kqgl/comeLateLeaveEarly/comeLateLeaveEarlyReadOnlyForm.html?id='+id+"&oper=VIEW&resId="+resId,title:"只读详情"});
 		         		 
                  })
            }
        });
    });

//    表格数据项的操作
    var list = {
        editFun:function(id){
        	 var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.layerOpenUrl({
                url:'/modules/zhbg/kqgl/comeLateLeaveEarly/comeLateLeaveEarlyForm.html?id='+id+ "&oper=EDIT&resId=" + resId,
                title:"修改迟到早退信息"
            })
        },
        deleteFun:function(id){
        	 var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.deleteOpt({
            	url: '/zhbg/kqgl/comeLateLeaveEarly/delete?id=' + id + "&resId=" + resId,
                tableId:'right_table',
                title:"删除"
            })
        }
    }
    /**
     * 导出按钮的事件
     */
    function exportDate () {
    	layer.confirm("是否导出查询的所有信息？", function(e) {
    		 $.ajax({
 				url : "/zhbg/kqgl/wc/getCnt",
 				data : {
 					subflag :Config.startflag, //标题
 					 goOutTime : $("#goOutTime").val() //时间
 					 
 				},
 				type : "post",
 				success : function(data){
 					if( data.cnt > 0){ //0 查询有数据， 可导出
 						$('#form').attr('action','/zhbg/kqgl/wc/export');
 						$('#form').attr('method','get');
 						$("#form").submit();
 					}else{
 						layer.msg('暂无可导出信息！',{icon:0}); //没有数据时弹出提示信息
 					}
 				}
 			})
    		
    	})
    	  
    };
  //清空查询条件
	function clearAll(){
		//$("#cdztUserName").val("");	//时间
		//$("#cdztUserId").val("");	
		$("#cdztDate").val("");
		$('#state option:first').prop("selected","selected");
	}
	//刷新方法，流程中需要回调
	function refreshPage(){
		TableInit.refTable("right_table");
	}
</script>
