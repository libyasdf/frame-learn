        , width: '20%'
        , align:"center"
    },{
        field: 'avgSickCnt'
            , title: '人均病假总次数'
            , width: '6%'
            , align:"center"
            , formatter: function (value, row, index) {
                     if(value=='0.00')
                     	return '-'
