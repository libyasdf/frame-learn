<script type="text/javascript">
    var resource = {
        resId : $('#left_ul').find('a.active').attr("id")
    }
    //参考：http://www.layui.com/laydate/
    //绑定日期输入input
    laydate.render({
        elem: '#time' //指定元素
    });
    //日期范围
    laydate.render({
        elem: '#meetingTime'
        , range: true
    });


    //定义bootatrap-table数据列
    //    sortable：开启列排序，其他参考API
    var right_table_col = [{
        field: 'id'
        , title: '序号'
        , width: '5%'
       /* , sortable: true
        , order: "desc"*/
        , align:"center"
        , formatter: function (value, row, index) {
            //计算序号，并存放开关ID，及已办事项ID
            var pageSize=$('#right_table').bootstrapTable('getOptions').pageSize;//通过表的#id 可以得到每页多少条
            var pageNumber=$('#right_table').bootstrapTable('getOptions').pageNumber;//通过表的#id 可以得到当前第几页
            var orderNum = pageSize * (pageNumber - 1) + index + 1;//计算序号
            return "<span data-id='"+row.id+"' >"+orderNum+"</span>";    //返回每条的序号： 每页条数 * （当前页 - 1 ）+ 序号
        }
    },{
        field: 'meetingTime'
        , title: '时间'
        , width: '10%'
        , sortable: true
        , order: "desc"
        , align:"center"
    },{
        field: 'meetingPlace'
        , title: '地点'
        , width: '20%'
        , align:"center"
        , formatter: function (value, row, index) {
            var val = value;
            if(value!=null&&value.length>5){
                val = val.substring(0,5)+"...";
            }
            if(value==null){
                val="-";
            }
            return "<span title='"+value+"'>" + val + "</span>";
        }
    },{
        field: 'superName'
        , title: '上级党组织'
        , width: '15%'
        , align:"center"
    },{
        field: 'partyOrganizationName'
        , title: '党组织'
        , width: '15%'
        , align:"center"
    },{
        field: 'compere'
        , title: '主持人'
        , width: '15%'
        , align:"center"
        , formatter: function (value, row, index) {
            var val = value;
            if(value!=null&&value.length>5){
                val = val.substring(0,5)+"...";
            }
            if(value==null){
                val="-";
            }
            return "<span title='"+value+"'>" + val + "</span>";
        }
    },{
        field: 'noteTaker'
        , title: '记录人'
        , width: '15%'
        , align:"center"
        , formatter: function (value, row, index) {
            var val = value;
            if(value!=null&&value.length>5){
                val = val.substring(0,5)+"...";
            }
            if(value==null){
                val="-";
            }
            return "<span title='"+value+"'>" + val + "</span>";
        }
    },{
        field: 'cz'
        , title: '操作'
        , width: '10%'
        , align:"center"
        , formatter: function (value, row, index) {  //直接定义function,return就是html代码
            var opt = value.split(",");
            var html = "";
            for (var i = 0; i < opt.length; i++) {
                if(opt[i] == "update") {
                    html +="<i title='修改' class='glyphicon glyphicon-edit' onclick=\'list.editFun(\"" + row.id + "\")\'></i>&nbsp;&nbsp;"
                }else if(opt[i] == "delete") {
                    html += "<i title='删除' class='glyphicon glyphicon-trash' onclick=\'list.deleteFun(\"" + row.id + "\")\'></i>"
                }
            }
            return html;
        }
    }];

    if(getcookie("rolesNo").indexOf("D478") >= 0){
        dzzTree.init({id:'4028d08266cd1d0a0166cd462e260001',type:"org"});
    }else{
        $.ajax({
            type: "get",
            async: false,
            url: "/djgl/ddjs/dzz/dzzgl/getOrgId",
            dataType: "json",
            success: function (data) {
                dzzTree.init({id:data.data,type:"org"});
            },
            error: function (data) {
            }
        })
    }
        var nodeId ="";
        if( $.fn.zTree.getZTreeObj("treeDemo")){
           var node = $.fn.zTree.getZTreeObj("treeDemo").getSelectedNodes()[0];
            nodeId = node.id
        }
        TableInit.init({
            domId: "right_table",
            url: "/djgl/ddjs/shyk/dkgl/getDkglList?id=" + nodeId,
            columns: right_table_col,
            queryParams: function (params) {
                //这里将各个查询项添加到要传递的参数中
//                可以做一些校验partyOrganizationId
                params.resId = $('#left_ul').find('a.active').attr("id");
             //   params.partyOrganizationId = node.zid;
                params.meetingTime = $('#meetingTime').val();
                params.meetingPlace = Trim($('#meetingPlace').val());
                params.compere = Trim($('#compere').val());
                params.noteTaker = Trim($('#noteTaker').val());
                return params;
            },
            readOnlyFn: function () {
                if(getcookie("rolesNo").indexOf("D478") == -1 && getcookie("rolesNo").indexOf("D488") == -1 && getcookie("rolesNo").indexOf("C433") == -1){
                    $('#right_table').bootstrapTable('hideColumn', 'cz');
                    $('.list_button_area').hide();
                }
                $('tr.readOnly').find('td:not(:last)').attr("title","点击查看详情");//悬停显示
                $('tr.readOnly').find('td:not(:last)').unbind('click')
                        .bind('click', function (e) {

                            //                    取消事件冒泡
                            var evt = e ? e
                                    : window.event;
                            if (evt.stopPropagation) {
                                evt
                                        .stopPropagation();
                            } else {
                                evt.cancelBubble = true;
                            }
                            //                    取消事件冒泡 end
                            var id = $(this).parent().find("span[data-id]").attr("data-id");
                            var resId = $('#left_ul').find('a.active').attr("id");
                            MyLayer
                                    .layerOpenUrl({
                                        url: '/modules/dwgl/shyk/dkgl/dkglEditReadOnlyForm.html?id=' + id + "&resId=" + resId + "&opertation=VIEW",
                                        title: '党课信息',
                                        width: '90%',
                                        height: '85%'
                                    });
                        });
            }
        });
    function refreshTable(node) {
        var opt = {
            url: "/djgl/ddjs/shyk/dkgl/getDkglList?id=" + node.id,
            pageNumber:1,
            pageSize:10
        };
        $('#right_table').bootstrapTable('refresh',opt);
    }
    //    表格数据项的操作
    var list = {
        addFun:function(id) {
            if ($.fn.zTree.getZTreeObj("treeDemo")) {
                var treeObj = $.fn.zTree.getZTreeObj("treeDemo");
                var node = treeObj.getSelectedNodes()[0];
                var parentNode = node.getParentNode();
                var resId = $('#left_ul').find('a.active').attr("id");
                if (node.orgType == "631") {
                    MyLayer.layerOpenUrl({
                        url: '/modules/dwgl/shyk/dkgl/dkglEditForm.html?id=' + id + "&resId=" + resId + "&orgName=" + encodeURI(encodeURI(node.name)) + "&isAdd=add&orgId=" + node.id,
                        title: '添加党课信息'
                    });
                } else {
                    layer.msg("党课只有党支部可以添加，请选择一个党支部！", {icon: 1});
                }
            }
        },
        editFun:function(id){
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.layerOpenUrl({
                url:'/modules/dwgl/shyk/dkgl/dkglEditForm.html?id='+id+"&resId="+resId,
                title:'修改党课信息'
            })
        },
        deleteFun:function(id){
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.deleteOpt({
                url:'/djgl/ddjs/shyk/dkgl/deleteById?id='+ id+"&resId="+resId,
                tableId:'right_table'
            })
        }
    }
    function clearAll() {
        $("#meetingTime").val("");
        $("#meetingPlace").val("");
        $("#compere").val("");
        $("#noteTaker").val("");
    }
//去空格
    function Trim(str)
    {
        return str.replace(/(^\s*)|(\s*$)/g, "");
    }

</script>
