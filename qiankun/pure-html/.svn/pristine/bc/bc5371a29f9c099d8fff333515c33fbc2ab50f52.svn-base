<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">

    <meta http-equiv="Expires" content="0">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Cache-control" content="no-cache">
    <meta http-equiv="Cache" content="no-cache">

    <link rel="stylesheet" type="text/css" href="../../static/core/bootstrap/css/bootstrap.css">
  <title> </title>
  <style type="text/css">
    .main{
      width:100%;
      height: 100%;
      font-size: 0;
      box-sizing: border-box;
    }
    
    .left{
      width:100%;
      height: 558px;
      font-size: 14px;
      border-top:4px solid #eee;
      overflow: auto;
    }

    .right{
      width:0;
      height: 0;
      overflow: auto;
    }

    /**
     * 多栏
     */
    .multicolumn .left{
      display: inline-block;
      box-sizing: border-box;
      width: 50%;
      height: 558px;
      font-size: 14px;
      border-top:4px solid #eee;
      border-right: 4px solid #eee;
      padding:5px;
    }
    .multicolumn .right{
      display: inline-block;
      width:50%;
      height: 558px;
      box-sizing: border-box;
      font-size: 14px;
      border-top:4px solid #eee;
      border-left: 4px solid #eee;
      padding:5px;
    }

    .multicolumnBtn{
      width:20px;
      height: 20px;
      background: #eee;
      position: fixed;
      bottom: 20px;
      right: 30px;
      text-align: center;
      border-radius: 10px;
    } 

    .multicolumnBtn span{
      color:#fff;
    }
  </style>
</head>
<body >
  <div class="main">
      <div class="left left-js"></div>
      <div class="right right-js"></div>
  </div>
  <div class="multicolumnBtn" >
      <span class="glyphicon glyphicon-remove"></span>
  </div>
  <script type="text/javascript" src="../../static/core/jquery/jquery-1.11.2.min.js"></script>
  <script type="text/javascript">
    // 加载左边区域
    function loadLeftPage(){
      $('.left-js').load("../template/left.html",function() {
          $(".multicolumnBtn").hide();
          $('li.item-left').unbind('click').bind('click',function(){
             loadRightPage('../template/right.html');
              $(".multicolumnBtn").show();
          })
      });

      $(".multicolumnBtn").unbind('click').bind('click',function(){
         $(this).hide();
         $('body').removeClass('multicolumn');
      })
    }
    

    // 加载右边
    function loadRightPage(url){
      $("body").addClass('multicolumn');
      $('.right-js').load(url,function() {
        
      });
    }

    loadLeftPage();
  </script>
</body>
</html>