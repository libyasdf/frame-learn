<style type="text/css">
    .panel-controls{
        position: absolute;
        right: 40px;
        top: 10px;
    }
    .panel-controls > i.showSelect{
        font-size: 16px;
        color: #acb1b8;
        cursor: pointer;
    }
    label{
        font-weight: normal;
    }
</style>
<body>
<div class="container-fluid">
    <div class="row">
        <!--查询-->
        <!-- resId -->
        <input type="text" id="resId" name="resId" value="" hidden="true">
        <!-- 值班表id字段 -->
        <input type="text" id="reportId" name="reportId" value="" hidden="true">
        <form id="dmForm" onkeydown="keyLogin();">
            <div class="col-md-12">
                <div class="panel panel-default toggle">
                    <div class="panel-heading" style="cursor: pointer;">
                        <h3 class="panel-title">查询项</h3>
                        <div class="panel-controls " >
                            <i class="glyphicon glyphicon-plus showSelect"></i>
                        </div>
                    </div>
                    <div class="panel-body" style="display: none;">
                        <div class="form-group">
                            <label class="col-md-2 control-label" style="text-align: right;"> 年份：</label>
                            <div class="col-md-3">
                                <input class="form-control" type="text" id="year" name="year"/>
                            </div>
                            <label class="col-md-2 control-label" style="text-align: right;"> 标题：</label>
                            <div class="col-md-3">
                                <input class="form-control" type="text" id="title" name="title"/>
                            </div>
                        </div>
                        <!--查询重置等按钮-->
                        <div class="form-group">
                            <div class="col-md-12" style="text-align: center;padding-top: 5px;">
                                <button type="button" class="btn btn-primary"
                                        onclick="TableInit.refTable('right_table')"> 查&nbsp;&nbsp;询
                                </button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <button type="reset" class="btn btn-primary" onclick="clearAll();">
                                    重&nbsp;&nbsp;置
                                </button>
                            </div>
                        </div>
                        <!--查询重置等按钮 end-->
                    </div>
                </div>
            </div>
        </form>
        <!--查询结束-->
        <div class="col-md-12">

            <div class="list_button_area">
                <button class="list_table_btn2"
                        onclick="addStudying()">
                    <span class="glyphicon glyphicon-plus-sign"></span> 新增
                </button>
            </div>

            <!--bootstrap-table表格-->
            <table id="right_table"></table>
        </div>
    </div>
</div>

<script type="text/javascript" src="/modules/system/component/tree/js/deptUserTree.js"></script>
<!--合并单元格的js-->
<script type="text/javascript" src="/common/js/mergeTable.js"></script>
<script src="/static/core/bootstrap-table/bootstrap-table.min.js"></script>
<script src="/static/core/bootstrap-table/locale/bootstrap-table-zh-CN.min.js"></script>
<script type="text/javascript">
    //参考：http://www.layui.com/laydate/
    //绑定日期输入input
    laydate.render({
        elem: '#year'
        ,type: 'year'//指定元素
    });

    //定义bootatrap-table数据列
    //    sortable：开启列排序，其他参考API
    var right_table_col = [{
        field: 'id'
        , title: '序号'
        , width: '5%'
        , order: "desc"
        , align:"center"
        , formatter: function (value, row, index) {
            //计算序号，并存放开关ID，及已办事项ID
            var pageSize=$('#right_table').bootstrapTable('getOptions').pageSize;//通过表的#id 可以得到每页多少条
            var pageNumber=$('#right_table').bootstrapTable('getOptions').pageNumber;//通过表的#id 可以得到当前第几页
            var orderNum = pageSize * (pageNumber - 1) + index + 1;//计算序号
            return "<span data-id='"+row.id+"' >"+orderNum+"</span>";    //返回每条的序号： 每页条数 * （当前页 - 1 ）+ 序号
        }
    }, {
        field: 'year'
        , title: '年份'
        , width: '10%'
        , align:"center"
    },{
        field: 'title'
        , title: '标题'
        , width: '25%'
        , align:"center"
    },{
        field: 'status'
        , title: '状态'
        , width: '25%'
        , align:"center"
        , formatter:function (value, row, index) {
            if(value == 0){
                return "<span data-id='"+row.id+"' >待分发</span>";
            }else if(value == 1){
                return "<span data-id='"+row.id+"' >已分发</span>";
            }else if(value == 2){
                return "<span data-id='"+row.id+"' >已汇总</span>";
            }
        }
    },{
        field: 'cz'
        , title: '操作'
        , width: '10%'
        , align:"center"
        , formatter: function (value, row, index) {  //直接定义function,return就是html代码
            var html = "";
            if(0 == row.status){
                //未分发的话可编辑
                html += "<i class='glyphicon glyphicon-edit' title='修改' style='cursor:pointer;' onclick=\'list.editFun(\"" + row.id + "\",\""+row.month+"\")\'></i>&nbsp;&nbsp;"
            }
            if(1 == row.status || 2 == row.status){
                //已分发的，或者已汇总的，可查看反馈信息
                html += "<i class='glyphicon glyphicon-list-alt' title='查看反馈信息' style='cursor:pointer;' onclick=\'list.seeBack(\"" + row.id + "\")\'></i>&nbsp;&nbsp;";
            }
            if(0 == row.status){
                //未分发的话可删除
                html += "<i class='glyphicon glyphicon-trash' title='删除' style='cursor:pointer;' onclick=\'list.deleteFun(\"" + row.id + "\")\'></i>";
            }
            return html;
        }
    }];

    $(document).ready(function (e) {

        //初始化表格
        TableInit.init({
            domId:"right_table",
            url:"/dagl/bygl/studying/getStudyingData",
            pagination:true,	//分页
            columns:right_table_col,
            editable:true,//开启编辑模式
            queryParams:function(params){
                //这里将各个查询项添加到要传递的参数中
//                可以做一些校验
                params.resId = $('#left_ul').find('a.active').attr("id");
                params.year = $("#year").val();
                params.title = $('#title').val();
                return params;
            },
            readOnlyFn:function(data){

                $('tr.readOnly').find('td:not(:last)').unbind('click').bind('click',function(e){
//                    取消事件冒泡
                    var evt = e ? e : window.event;
                    if (evt.stopPropagation) {
                        evt.stopPropagation();
                    }else {
                        evt.cancelBubble = true;
                    }
//                    取消事件冒泡 end
//                     MyLayer.layerOpenUrl({url:'/modules/zhbg/zbgl/sbqkReadOnlyForm.html',title:'只读'});
                });
            },
            rowStyle: function (row, index) {	//默认样式：居中，鼠标为手

                return {
                    classes: 'readOnly'
                    ,css: {"text-align":"center"}
                };
            }
        });
    });

    //    表格数据项的操作
    var list = {
        editFun: function (id) {
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.layerOpenUrl({
                url: '/modules/dagl/bygl/studyingForm.html?id=' + id + "&oper=EDIT&resId=" + resId,
                title: "修改编研信息"
            })
        },
        seeBack:function(id){
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.layerOpenUrl({
                url: '/modules/dagl/bygl/studyingBackList.html?id=' + id + "&resId=" + resId,
                title: "查看处室反馈详情"
            })
        },
        deleteFun: function (id) {
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.deleteOpt({
                url: '/dagl/bygl/studying/deleteStudying?id=' + id + "&resId=" + resId,
                tableId: 'right_table'
            })
        }
    }

    //重置按钮不清空隐藏域，需要方法清空
    function clearAll() {
    }

    //格式化日期
    function DateToStringFomatter(date) {
        var y = date.getFullYear();
        var m = date.getMonth() + 1;
        m = m < 10 ? '0' + m : m;
        var d = date.getDate();
        d = d < 10 ? ('0' + d) : d;
        return y + '-' + m;
    };

    /**
     * 新增
     */
    function addStudying () {
        var resId = $('#left_ul').find('a.active').attr("id");
        MyLayer.layerOpenUrl({
            url: '/modules/dagl/bygl/studyingForm.html?oper=ADD&resId=' + resId,
            title: "新增编研信息"
        })

    };

</script>
</body>
</html>