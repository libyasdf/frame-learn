<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\考勤管理_19.3.28"></property>
	
	<target name="lyj">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="liyingjie"/>
		</copy>
	</target>
	
	<!-- 这里的dir层级目录要注意，跟build文件所在目录有关-->
	<fileset id="liyingjie" dir="../../../../../">
		
		<!--旷工管理中的导出失效问题修改-->
		<include name="WebContent/modules/zhbg/kqgl/absenteeism/absenteeismList.html"/>
		<!-- 迟到早退的只读页显示错误问题修改 -->
		<include name="WebContent/modules/zhbg/kqgl/comeLateLeaveEarly/js/comeLateLeaveEarlyForm.js"/>
		
		<!-- 考勤数据导入合计根据筛选结果显示合计 -->
		<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/zhbg/kqgl/xtpz/service/KqLogServiceImpl.class"/>
		
		
		<!-- 会议管理部门树设置为不联级-->
		<include name="WebContent/modules/zhbg/hygl/meetingApply/meetingRoomApplyList.html"/>
		
		
		<!-- 考勤管理流程节点显示问题 -->
		<include name="WebContent/modules/zhbg/kqgl/qj/js/qjEditForm.js"/>
		<include name="WebContent/modules/zhbg/kqgl/comeLateLeaveEarly/js/comeLateLeaveEarlyForm.js"/>
		<include name="WebContent/modules/zhbg/kqgl/businessTrip/js/businessTripEdit.js"/>
		<include name="WebContent/modules/zhbg/kqgl/kqcx/overTimeQuery.html"/>
		<include name="WebContent/modules/zhbg/kqgl/overTime/js/overTimeEdit.js"/>
		
		
	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/tjxm"/>
			<copy todir="${export.dir.root}/tjxm" overwrite="true">
				<fileset refid="fc"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,lyj">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>