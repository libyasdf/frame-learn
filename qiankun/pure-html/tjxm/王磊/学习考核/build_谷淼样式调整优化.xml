<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\谷淼样式调整优化_20181030"></property>
	
	<target name="wl">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="wanglei"/>
		</copy>
	</target>
	
	<!-- 这里的dir层级目录要注意，跟build文件所在目录有关-->
	<fileset id="wanglei" dir="../../../">

        <!-- 数据字典滚动条 -->
        <include name="WebContent/modules/system/config/dictionary/dictionaryList.html"/>

        <!-- 人员树滚动条 -->
        <include name="WebContent/modules/system/component/tree/"/>

        <!-- 工作计划 -->
        <include name="WebContent/common/js/main.js"/>
        <include name="WebContent/static/css/common/style.css"/>

        <!-- 导航栏渲染 -->
        <include name="WebContent/main.html"/>
        <include name="WebContent/moduleIndex.html"/>
        <include name="WebContent/modules/system/config/toggle/"/>
        <include name="WebContent/modules/system/config/holidayset/jjrSet.html"/>
        <include name="WebContent/common/js/main.js"/>
        <include name="WebContent/common/js/main.js"/>
        <include name="WebContent/common/js/main.js"/>

	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/tjxm"/>
			<copy todir="${export.dir.root}/tjxm" overwrite="true">
				<fileset refid="fc"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,wl">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>