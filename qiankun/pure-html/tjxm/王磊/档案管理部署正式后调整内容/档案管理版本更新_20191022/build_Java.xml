<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\档案管理java_20191022"></property>
	<target name="wl">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="wanglei"/>
		</copy>
	</target>
	
	<!-- 这里的dir层级目录要注意，跟build文件所在目录有关-->
	<fileset id="wanglei" dir="../../../../">
		<!--Q2变更列表主管人下拉加载SQL修改
			-->
		<include name="src/com/sinosoft/sinoep/modules/dagl/xtpz/categorymanage/services/"/>


		<!--档案检索只读打开空白页的修改-->
		<include name="WebContent/modules/dagl/bmgl/js/readonly.js"/>
		<include name="WebContent/modules/dagl/bmgl/js/indexDangAnFind.js"/>
		<!--传统借阅，密级下拉加载和保存-->
		<include name="WebContent/modules/dagl/daly/borrow/borrowmanage/js/traditionalRegisterEdit.js"/>
		<!--Q2变更列表的档号展示修改，folder_no 改为arcive_no-->
		<include name="WebContent/modules/dagl/daly/qtwo/Q2EditForm.html"/>
		<!--设置应还日期的时候添加是否需要打印报表功能-->
		<include name="WebContent/modules/dagl/daly/borrow/borrowmanage/selectReturnDate.html"/>
	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/tjxm"/>
			<copy todir="${export.dir.root}/tjxm" overwrite="true">
				<fileset refid="wl"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,wl">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>