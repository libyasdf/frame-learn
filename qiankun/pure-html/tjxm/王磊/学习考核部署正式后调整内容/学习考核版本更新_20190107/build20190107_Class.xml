<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\学习考核20190107Class"></property>
	
	<target name="mqx">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="fengchao"/>
		</copy>
	</target>
	
	
	<fileset id="fengchao" dir="../../../../">
			
		<!-- 后台class-->
		<!--修改查询部门下是否含有上报员的方法-->
		<include name="build/classes/com/sinosoft/sinoep/modules/zhbg/xxkh/testmanage/services/TestManageServiceImpl.class"/>
		<!--发送待办的同时，发送消息-->
		<include name="build/classes/com/sinosoft/sinoep/modules/zhbg/xxkh/testmanage/controller/TestManageController.class"/>
		<include name="build/classes/com/sinosoft/sinoep/modules/zhbg/xxkh/testmanage/source/Task.class"/>

		<!--前台-->
		<include name="WebContent/modules/zhbg/xxkh/testManage/js/ksglEditForm.js"/>
		<include name="WebContent/modules/zhbg/xxkh/testManage/ksglEnterTest.html"/>
		<include name="WebContent/modules/zhbg/xxkh/testManage/reportPersonsEditForm.html"/>
		<include name="WebContent/modules/zhbg/xxkh/displayVideoAndPdf/playVideo.html"/>
	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/cqqx"/>
			<copy todir="${export.dir.root}/cqqx" overwrite="true">
				<fileset refid="fengchao"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,mqx">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>