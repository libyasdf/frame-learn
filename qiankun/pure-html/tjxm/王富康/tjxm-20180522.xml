<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="F:\导出文件\tjxm\20180516"></property>
	
	
	<target name="all">
		<mkdir dir="${export.dir.root}"/>
		<copy todir="${export.dir.root}" overwrite="true">
			<fileset refid="zs"/>
		</copy>
	</target>
	
	<fileset id="zs" dir="../">
		
		<!-- 1：防止表单重复提交 -->
		<include name="WebContent/modules/system/config/toggle/**"/>
		<include name="src/com/sinosoft/sinoep/modules/system/config/toggle/**"/>
		
		<!-- 2：防止表单重复提交 -->
		<include name="src/com/sinosoft/sinoep/common/util/repeatformvalidator/**"/>
		
		<!-- 3：小图标的jar包 -->
		<include name="WebContent/static/core/font-awesome-4.7.0/**"/>
		
	</fileset>
	
	
	<!--删除上次导出文件-->
	<target name="deleteOldFile" >  
	    <delete verbose="true" includeemptydirs="true" failonerror="false" >
	       <fileset dir="${export.dir.root}">
	           <include name="**/*"/>
	       </fileset>
	    </delete>
	</target> 

	<target name="default" depends="deleteOldFile,all">
        <exec executable="cmd.exe" failonerror="false">  
            <arg line='/c explorer "${export.dir.root}\"' />  
        </exec>
	</target>	
</project>