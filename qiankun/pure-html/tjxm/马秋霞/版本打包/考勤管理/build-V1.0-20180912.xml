	<target name="mqx">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="maqiuxia"/>
		</copy>
	</target>
	
	<fileset id="maqiuxia" dir="../../../../">
		       <!-- java文件 -->
				<!--公共的类 -->
				<include name="src/com/sinosoft/sinoep/common/constant/CommonConstants.java"/>
				<include name="src/com/sinosoft/sinoep/modules/system/config/holidayset/service/**"/>
				<!--综合办公——》工具类 -->
				<include name="src/com/sinosoft/sinoep/modules/zhbg/common/util/**"/>
				<!--综合办公——》考勤管理 -->
				<include name="src/com/sinosoft/sinoep/modules/zhbg/kqgl/**"/>
				<include name="WebContent/modules/zhbg/kqgl/**"/>
		
	          	<!-- class文件 -->
		        <!--公共的类 -->
				<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/common/constant/CommonConstants.class"/>
				<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/system/config/holidayset/service/**"/>
				<!--综合办公——》工具类 -->
				<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/zhbg/common/util/**"/>
				<!--综合办公——》考勤管理 -->
				<include name="WebContent/WEB-INF/classes/com/sinosoft/sinoep/modules/zhbg/kqgl/**"/>
					
		
		


				
				
				
		
	</fileset>
	
	<target name="all">
		<mkdir dir="${export.dir.root}/cqqx"/>
		<copy todir="${export.dir.root}/cqqx" overwrite="true">
			<fileset refid="mqx"/>
		</copy>
	</target>
	<!--删除上次导出文件-->
	<target name="deleteOldFile" >  
	    <delete verbose="true" includeemptydirs="true" failonerror="false" >
	       <fileset dir="${export.dir.root}">
	           <include name="**/*"/>
	       </fileset>
	    </delete>
	</target> 

	<target name="default" depends="deleteOldFile,mqx">
        <exec executable="cmd" failonerror="false">  
            <arg line='/c explorer "${export.dir.root}\"' />  
        </exec>
	</target>	
</project>