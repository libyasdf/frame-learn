<script type="text/javascript">
    var resource = {
        resId : $('#left_ul').find('a.active').attr("id")
    }
    //参考：http://www.layui.com/laydate/
    //绑定日期输入input
    laydate.render({
        elem: '#annual'
        ,type: 'year'
        , range: true
    });


    //定义bootatrap-table数据列
    //    sortable：开启列排序，其他参考API
    var right_table_col = [{
        field: 'id'
        , title: '序号'
        , width: '5%'
   /*     , sortable: true
        , order: "desc"*/
        , align:"center"
        , formatter: function (value, row, index) {
            //计算序号，并存放开关ID，及已办事项ID
            var pageSize=$('#right_table').bootstrapTable('getOptions').pageSize;//通过表的#id 可以得到每页多少条
            var pageNumber=$('#right_table').bootstrapTable('getOptions').pageNumber;//通过表的#id 可以得到当前第几页
            var orderNum = pageSize * (pageNumber - 1) + index + 1;//计算序号
            return "<span data-id='"+row.id+"' >"+orderNum+"</span>";    //返回每条的序号： 每页条数 * （当前页 - 1 ）+ 序号
        }
    },{
        field: 'superName'
        , title: '上级党组织'
        , width: '10%'
        , align:"center"
    },{
        field: 'partyOrganizationName'
        , title: '党组织'
        , width: '9%'
        , align:"center"
    }, {
        field: 'annual'
        , title: '年度'
        , width: '10%'
        , sortable: true
        , order: "desc"
        , align:"center"
    }, {
        field: 'reportingTime'
        , title: '上报时间'
        , width: '9%'
        , sortable: true
        , order: "desc"
        , align:"center"
    },{
        field: 'subflag'
        , title: '审批状态'
        , width: '10%'
        , align:"center"
        , formatter: function (value, row, index) {
            if(value==Config.approvalflag){
                return"审批通过";
            }else {
                return"";
            }
        }
    },{
        field: 'cz'
        , title: '操作'
        , width: '10%'
        , align:"center"
        , formatter: function (value, row, index) {  //直接定义function,return就是html代码
            var opt = value.split(",");
            var html = "";
            for (var i = 0; i < opt.length; i++) {
                if(opt[i] == "update") {
                    html +="<i title='修改' class='glyphicon glyphicon-edit' onclick=\'list.editFun(\"" + row.id + "\")\'></i>&nbsp;&nbsp;"
                }else if(opt[i] == "delete") {
                    html += "<i title='删除' class='glyphicon glyphicon-trash' onclick=\'list.deleteFun(\"" + row.id + "\")\'></i>"
                }
            }
            return html;
        }
    }];

    if(getcookie("rolesNo").indexOf("D478") >= 0){
        dzzTree.init({id:'4028d08266cd1d0a0166cd462e260001',type:"org"});
    }else{
        $.ajax({
            type: "get",
            async: false,
            url: "/djgl/ddjs/dzz/dzzgl/getOrgId",
            dataType: "json",
            success: function (data) {
                dzzTree.init({id:data.data,type:"org"});
            },
            error: function (data) {
            }
        })
    }

    var nodeId ="";
    if( $.fn.zTree.getZTreeObj("treeDemo")){
        var node = $.fn.zTree.getZTreeObj("treeDemo").getSelectedNodes()[0];
        nodeId = node.id
    }
        TableInit.init({
            domId: "right_table",
            url: "/djgl/ddjs/shyk/ndjh/getNdjhList?id=" +nodeId,
            columns: right_table_col,
            queryParams: function (params) {
                //这里将各个查询项添加到要传递的参数中
//                可以做一些校验
                params.annual = $('#annual').val();
                params.typeVal = "hz";//统计
             //   params.partyOrganizationId = node.zid;
            //    params.subflag = $('#subflag').val();
                return params;
            },
            readOnlyFn: function () {
                $('tr.readOnly').find('td:not(:last)').attr("title","点击查看详情");//悬停显示
                $('tr.readOnly').find('td:not(:last)').unbind('click')
                        .bind('click', function (e) {

                            //                    取消事件冒泡
                            var evt = e ? e
                                    : window.event;
                            if (evt.stopPropagation) {
                                evt
                                        .stopPropagation();
                            } else {
                                evt.cancelBubble = true;
                            }
                            //                    取消事件冒泡 end
                            var id = $(this).parent().find("span[data-id]").attr("data-id");
                            var resId = $('#left_ul').find('a.active').attr("id");
                            MyLayer
                                    .layerOpenUrl({
                                        url: '/modules/dwgl/shyk/ndjh/ndjhEditReadOnlyForm.html?id=' + id + "&resId=" + resId + "&opertation=VIEW",
                                        title: '年度计划信息',
                                        width: '90%',
                                        height: '85%'
                                    });
                        });
            }
        });
    function refreshTable(node) {
        var opt = {
            url: "/djgl/ddjs/shyk/ndjh/getNdjhList?id=" + node.id,
            pageNumber:1,
            pageSize:10
        };
        $('#right_table').bootstrapTable('refresh',opt);
    }
    //    表格数据项的操作
    var list = {
        addFun:function(id) {
            if ($.fn.zTree.getZTreeObj("treeDemo")) {
                var treeObj = $.fn.zTree.getZTreeObj("treeDemo");
                var node = treeObj.getSelectedNodes()[0];
                var parentNode = node.getParentNode();
                var resId = $('#left_ul').find('a.active').attr("id");

                var myDate = new Date();
                var annual = myDate.getFullYear();
                var partyOrganizationId = node.id;
                var datas = {"annual": annual, "partyOrganizationId": partyOrganizationId};
                if (node.orgType == "631") {
                    httpRequest("get", "/djgl/ddjs/shyk/ndjh/addFrom", datas, function (data) {
                        if (data.data.id != null && data.data.id != ""&& data.data.subflag != "5") {
                            layer.msg("本年度已有年度计划请点击修改！", {icon: 1});
                        } else  if (data.data.id != null && data.data.id != "") {
                            layer.msg("本党支部的年度计划已提交，请勿重复新增！", {icon: 1});
                        } else {
                            MyLayer.layerOpenUrl({
                                url: '/modules/dwgl/shyk/ndjh/ndjhEditForm.html?id=' + id + "&resId=" + resId + "&orgName=" + encodeURI(encodeURI(node.name)) + "&isAdd=add&orgId=" + node.id + '&oper=NEW',
                                title: '添加年度计划'
                            })
                        }

                    });
                } else {
                    layer.msg("年度计划只有党支部可以添加，请选择一个党支部！", {icon: 1});
                }


            }
        },
        editFun:function(id){
            var treeObj=$.fn.zTree.getZTreeObj("treeDemo");
            var node = treeObj.getSelectedNodes()[0];
            var parentNode = node.getParentNode();
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.layerOpenUrl({
                url:'/modules/dwgl/shyk/ndjh/ndjhEditForm.html?oper=EDIT&id='+id+"&resId="+resId+"&orgName="+encodeURI(encodeURI(node.name)) + "&isAdd=EDIT&orgId=" + node.id,
                title:'修改年度计划'
            })
        },
        deleteFun:function(id){
            var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.deleteOpt({
                url:'/djgl/ddjs/shyk/ndjh/deleteById?id='+ id+"&resId="+resId,
                tableId:'right_table'
            })
        }
    }

    /*
     * 新增判断是否*/
    function  addFrom(){
        var treeObj=$.fn.zTree.getZTreeObj("treeDemo");
        var node = treeObj.getSelectedNodes()[0];
        var parentNode = node.getParentNode();
        var resId = $('#left_ul').find('a.active').attr("id");
        var datas = {"id":$("#id").val(),"resId":$("#resId").val(),"annual":$("#annual").val(),"partyOrganizationId":node.id};
        httpRequest("get","/djgl/ddjs/shyk/ndjh/addFrom",datas,function (data){
            if(data.data.id!=null){
                layer.msg("本年度已有年度计划请点击修改！", {icon: 1});

            }else{
                MyLayer.layerOpenUrl({
                    url:'/modules/dwgl/shyk/ndjh/ndjhEditForm.html?id='+$("#id").val()+"&resId="+$("#resId").val()+"&orgName="+ encodeURI(encodeURI(node.name)) + "&isAdd=add&orgId=" + node.id,
                    title:'添加年度计划'
                })
            }

        });



    }
    function clearAll() {
        $("#annual").val("");
        $("#subflag").val("");

    }
    //刷新方法，流程中需要回调
    function refreshPage(){
        TableInit.refTable("right_table");
    }
</script>
