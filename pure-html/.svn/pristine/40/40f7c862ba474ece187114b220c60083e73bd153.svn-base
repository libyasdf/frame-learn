        if(idsStr){
            ids = idsStr.split(",");
            names = namesStr.split(",");
            for(var i=0; i<ids.length;i++){
                html.push(CommonUtil.joinHtml(ids[i],names[i]));
            }
            $('.right_del_list').append(html.join(''));

            // 添加删除
            CommonUtil.deleteElement();
        }
    },
    
