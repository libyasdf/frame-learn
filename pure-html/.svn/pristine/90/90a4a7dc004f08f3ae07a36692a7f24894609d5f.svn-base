<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\会议管理_19.4.17"></property>
	
	<target name="lyj">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="liyingjie"/>
		</copy>
	</target>
	
	<!-- 这里的dir层级目录要注意，跟build文件所在目录有关-->
	<fileset id="liyingjie" dir="../../../../../">
		
		<!-- 4.17正式打包 -->
		<!-- 会议管理；整个模块打包 -->
		<include name="src/com/sinosoft/sinoep/modules/zhbg/hygl/**"/>
		<include name="WebContent/modules/zhbg/hygl/**"/>
		<include name="WebContent/static/images/hygl/**"/>
		<!-- 考勤管理 ：整个模块打包-->
		<include name="src/com/sinosoft/sinoep/modules/zhbg/kqgl/**"/>
		<include name="WebContent/modules/zhbg/kqgl/**"/>
		<!-- 视频管理 ：修改待办标题-->
		<include name="src/com/sinosoft/sinoep/modules/video/background/controller/VideoContentController.java"/>
		<!-- 音视频门户 ：添加切换岗位功能-->
		<include name="WebContent/modules/video/reception/videoHomePage.html"/>
		<!-- 公共js:2019-04-15-->
		<include name="WebContent/static/js/common/tablelist.js"/>
		
	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/tjxm"/>
			<copy todir="${export.dir.root}/tjxm" overwrite="true">
				<fileset refid="fc"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,lyj">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>