<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\值班管理20190107java"></property>
	
	<target name="mqx">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="maqiuxia"/>
		</copy>
	</target>
	
	<fileset id="maqiuxia" dir="../../../../">
		
		<!--查询是否含有上报人员的方法的修改 -->
		<include name="src/com/sinosoft/sinoep/modules/zhbg/zbgl/dutywork/services/DutyWorkServiceImpl.java"/>

