//  表格数据项的操作
    var list = {
        editFun:function(id){
        	  var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.layerOpenUrl({
            	 url: '/modules/mypage/record/recordEditForm.html?id=' + id + "&oper=EDIT&resId=" + resId,
                title:"修改"
            })
        },
        deleteFun:function(id){
        	 var resId = $('#left_ul').find('a.active').attr("id");
            MyLayer.deleteOpt({
            	url: '/mypage/record/delete?id=' + id+ "&resId=" + resId,
                tableId:'right_table'
            })
        }
    }
  
  //导入
	var _index;
    function importInfo() {
        var resId = $('#left_ul').find('a.active').attr("id");
       // MyLayer.layerOpenUrl({url:'/modules/template/importFileForm.html?importUrl=/zhbg/salary/importInfo&resId=' + resId,title:'导入',width: "55%", height: "55%"});
        layer.open({
	        id:"selectZtree",
	        type: 2,
	        content: '/modules/template/importFileForm.html?importUrl=/mypage/record/importInfo&resId=' + resId,
	        area: ['55%', '55%'],
	        title: "导入",
	        success:function(layero, index){
	        	_index=index;
	        }
	    })
    }

	$(function () {
		      $('[data-toggle="tooltip"]').tooltip()
		      $('[data-toggle="popover"]').popover({
		        trigger:"hover"
		      })
  })
  //关闭导入窗口
  function putBackData1(msg){
    //关闭窗口
    layer.close(_index);
    if(msg.msg.indexOf("导入失败,请核对数据格式是否与模板数据格式一致")!=-1){
    	layer.msg(msg.msg, {
			icon : 2
		});
    }else if (msg.msg.indexOf("导入失败")!=-1){
    	layer.msg("导入失败，请检查文件类型是否是excel", {
			icon : 2
		});
    }else if (msg.msg.indexOf("表格中无数据")!=-1){
    	layer.msg(msg.msg, {
			icon : 2
		});
    }else if(msg.msg.indexOf("其中：")==-1){
    	layer.msg(msg.msg, {
			icon : 1
		});
    }else{
    	layer.open({
    	  icon: 1,
  		  skin: 'layer-ext-moon', //加上边框
  		  area: ['600px', '360px'], //宽高
          content: msg.msg,
          success:function(layero, index){  //修改弹出框中的样式
            // 图标
            var SuccessIcon = layero.children()[1].getElementsByClassName('layui-layer-ico1')[0];  
            // 内容区
            var SuccessCon = SuccessIcon ? layero.children()[1].children[1] : layero.children()[1].children[0] ;
            if (SuccessIcon){   // 改变图标样式
                SuccessIcon.style.left = 0 ;
                SuccessIcon.style.right = '100px' ;
                SuccessIcon.style.margin = 'auto' ;
            }
            if(SuccessCon){ // 改变内容区样式
                 SuccessCon.style.padding = "0 20px 20px 20px"
            }
           
          }  
  		});
    }
    	
}
	
