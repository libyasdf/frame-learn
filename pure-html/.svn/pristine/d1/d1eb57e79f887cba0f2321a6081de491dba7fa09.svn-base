         ,formatter: function (value, row, index) {
             	if(value!=null){
             		var length = value.length
     	  	   	      var val = '';
     	  	   	      if(length>21){
     	  	   	    	  val = value.substring(0,20)+"...";//
     	  	   	      }else{
