<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm" default="default">
	<property name="export.dir.root" value="D:\导出项目文件\外卖管理_19.8.8"></property>
	
	<target name="lyj">
		<mkdir dir="${export.dir.root}\tjxm"/>
		<copy todir="${export.dir.root}\tjxm" overwrite="true">
			<fileset refid="liyingjie"/>
		</copy>
	</target>
	
	<!-- 这里的dir层级目录要注意，跟build文件所在目录有关-->
	<fileset id="liyingjie" dir="../../../../">
		
		<!-- 1.修改我的订单中的部门名称显示混乱问题 -->
		<!-- 2.修改外卖订单订单号显示规则不对问题 -->
		<!-- 3.修改管理员取消订单后不能下单问题 -->
		<!-- 4.修改商品描述限制长度为200字 -->
		<include name="src/com/sinosoft/sinoep/modules/mypage/wmgl/takeout/takeoutinfo/services/**"/>
		<include name="src/com/sinosoft/sinoep/modules/mypage/wmgl/index/order/services/**"/>
		<include name="WebContent/modules/mypage/wmgl/takeout/orderEditForm.html"/>
		<include name="WebContent/modules/mypage/wmgl/takeout/takeOutOrderForm.html"/>
		<include name="WebContent/modules/mypage/wmgl/index/dist/build.js"/>
		<include name="WebContent/modules/mypage/wmgl/index/dist/build.js.map"/>
		<include name="WebContent/modules/mypage/wmgl/categorygoods/js/goodsValidator.js"/>

		
	</fileset>
	
	<target name="all">
			<mkdir dir="${export.dir.root}/tjxm"/>
			<copy todir="${export.dir.root}/tjxm" overwrite="true">
				<fileset refid="fc"/>
			</copy>
		</target>
		<!--删除上次导出文件-->
		<target name="deleteOldFile" >  
		    <delete verbose="true" includeemptydirs="true" failonerror="false" >
		       <fileset dir="${export.dir.root}">
		           <include name="**/*"/>
		       </fileset>
		    </delete>
		</target> 

		<target name="default" depends="deleteOldFile,lyj">
	        <exec executable="cmd" failonerror="false">  
	            <arg line='/c explorer "${export.dir.root}\"' />  
	        </exec>
		</target>	
	</project>