<?xml version="1.0" encoding="UTF-8"?>
<project name="tjxm-uuid" default="default">
	<property name="export.dir.root" value="F:\tjxm\导出文件\uuid_update"></property>
	
	
	<target name="all">
		<mkdir dir="${export.dir.root}/tjxm"/>
		<copy todir="${export.dir.root}/tjxm" overwrite="true">
			<fileset refid="llg"/>
		</copy>
	</target>
	
	<fileset id="llg" dir="../../../">
		
		<!-- 信息发布 -->
		<include name="build\classes\com\sinosoft\sinoep\modules\info\**"/>
		<include name="build\classes\com\sinosoft\sinoep\modules\system\notice\**"/>

		<include name="WebContent\modules\info\**"/>
		<include name="WebContent\modules\info\**"/>
		<include name="WebContent\modules\system\component\groupTree\**"/>

	</fileset>

	<!--删除上次导出文件-->
	<target name="deleteOldFile" >
	    <delete verbose="true" includeemptydirs="true" failonerror="false" >
	       <fileset dir="${export.dir.root}">
	           <include name="**/*"/>
	       </fileset>
	    </delete>
	</target> 

	<target name="default" depends="deleteOldFile,all">
        <exec executable="cmd.exe" failonerror="false">
            <arg line='/c explorer "${export.dir.root}\"' />
        </exec>
	</target>	
</project>